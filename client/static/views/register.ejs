<%- include("header"); -%>
<script type="text/javascript">
    $(document).ready(function() {
        $('.modal').modal('show');
    });
</script>
</head>
<body class="bg-main">
<%- include("flash_messages")  -%>
    <header class="masthead d-flex">
      <div class="container text-center my-auto">
        <h1 class="mb-3 text-warning">Register</h1>
          <div class="col-md-4 offset-md-4">
            <form action="/register" method="POST">
                <div class="form-group">
                  <% if ("input_data" in session == false) { %>
                  <input type="first_name" class="form-control" name="first_name" id="first_name" 
                  aria-describedby="firstnamelHelp" placeholder="Enter first name" required>
                  <% } else { %>
                  <input type="first_name" class="form-control" name="first_name" id="first_name" 
                  value="<%=session.input_data.first_name%>" aria-describedby="firstnamelHelp" placeholder="Enter first name" required>
                  <% } %>
                </div>
                <div class="form-group">
                  <% if ("input_data" in session == false) { %>
                  <input type="last_name" class="form-control" name="last_name" id="last_name" 
                  aria-describedby="lastnamelHelp" placeholder="Enter last name" required>
                  <% } else { %>
                  <input type="last_name" class="form-control" name="last_name" id="last_name" 
                  value="<%=session.input_data.last_name%>" aria-describedby="lastnamelHelp" placeholder="Enter last name" required>
                  <% } %>
                </div>
                <div class="form-group">
                  <% if ("input_data" in session == false) { %>
                  <input type="username" class="form-control" name="username" id="username" 
                  aria-describedby="usernamelHelp" placeholder="Enter user name" required>
                  <% } else { %>
                  <input type="username" class="form-control" name="username" id="username" 
                  value="<%=session.input_data.username%>" aria-describedby="usernamelHelp" placeholder="Enter user name" required>
                  <% } %>
                </div>
                <div class="form-group">
                  <% if ("input_data" in session == false) { %>
                  <input type="email" class="form-control" name="email" id="email" 
                  aria-describedby="emailHelp" placeholder="Enter email" required>
                  <% } else { %>
                  <input type="email" class="form-control" name="email" id="email" 
                  value="<%=session.input_data.email%>" aria-describedby="emailHelp" placeholder="Enter email" required>
                  <% } %>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" id="password" placeholder="Password" required>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="confirmed_password" id="confirm_password" placeholder="Re-enter password" required>
                </div>
                <button type="submit" class="btn btn-warning">Register</button>
                <a href="/login" class="btn btn-link text-warning">Login</a>
            </form>
          </div>
      </div>
    </header>
</body>
</html>
